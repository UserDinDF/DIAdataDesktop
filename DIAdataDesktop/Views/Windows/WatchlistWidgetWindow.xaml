<Window x:Class="DIAdataDesktop.Views.WatchlistWidgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DIAdataDesktop.Views"
        xmlns:vm="clr-namespace:DIAdataDesktop.ViewModels"
        xmlns:conv="clr-namespace:DIAdataDesktop.Converters"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Style="{StaticResource CustomWindowStyle}"
        Title="Watchlist"
        Width="580" Height="520"
        WindowStartupLocation="CenterOwner"
        Background="#0B1220"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="False"
        Topmost="{Binding IsTopmost, Mode=TwoWay}">

    <Window.Resources>
        <conv:ChangeToBrushConverter x:Key="ChangeToBrushConverter"/>
        <conv:ChangeToArrowConverter x:Key="ChangeToArrowConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="FontSize" Value="12.5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="RowButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="Transparent" CornerRadius="10">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#111B35"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small icon button for star -->
        <Style x:Key="StarIconButton" TargetType="Button">
            <Setter Property="Width" Value="26"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#24314E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#111B35"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#2D64E3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Border CornerRadius="14" Background="#111B35" BorderBrush="#1E2A46" BorderThickness="1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Watchlist (Favorites)" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding StatusLine}" Foreground="#94A3B8" FontSize="11"/>
                </StackPanel>

                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,12,0">
                        <TextBlock Text="All" Foreground="#94A3B8" FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"/>

                        <ToggleButton Style="{StaticResource ToggleSwitch}"
                  IsChecked="{Binding ShowOnlyFavorites, Mode=TwoWay}"/>

                        <TextBlock Text="Favs" Foreground="#94A3B8" FontSize="11" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>

                    
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,10,0">
                        <TextBlock Text="Topmost" Foreground="#94A3B8" FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ToggleButton Style="{StaticResource ToggleSwitch}"
                                      IsChecked="{Binding IsTopmost, Mode=TwoWay}"/>
                    </StackPanel>

                    <Button Content="Refresh" Padding="10,4"
                            Style="{StaticResource PrimaryButton}"
                            Command="{Binding RefreshCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Table -->
        <Border Grid.Row="2" CornerRadius="14" Background="#111B35" BorderBrush="#1E2A46" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Background="#0B1220" BorderBrush="#1E2A46" BorderThickness="0,0,0,1" Padding="8,6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="28"/>
                            <!-- ⭐ -->
                            <ColumnDefinition Width="30"/>
                            <!-- Icon -->
                            <ColumnDefinition Width="78"/>
                            <ColumnDefinition Width="88"/>
                            <ColumnDefinition Width="74"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="70"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text=""/>
                        <TextBlock Grid.Column="1" Text=""/>
                        <TextBlock Grid.Column="2" Text="Symbol" Style="{StaticResource HeaderText}"/>
                        <TextBlock Grid.Column="3" Text="Last" Style="{StaticResource HeaderText}"/>
                        <TextBlock Grid.Column="4" Text="Δ" Style="{StaticResource HeaderText}"/>
                        <TextBlock Grid.Column="5" Text="Δ%" Style="{StaticResource HeaderText}"/>

                        <TextBlock Grid.Column="6" Text="Yesterday" Style="{StaticResource HeaderText}"
                                   Visibility="{Binding ShowYesterday, Converter={StaticResource BoolToVis}}"/>

                        <TextBlock Grid.Column="7" Text="Volume" Style="{StaticResource HeaderText}"
                                   Visibility="{Binding ShowVolume, Converter={StaticResource BoolToVis}}"/>

                        <TextBlock Grid.Column="8" Text="Updated" Style="{StaticResource HeaderText}"
                                   Visibility="{Binding ShowUpdated, Converter={StaticResource BoolToVis}}"/>
                    </Grid>
                </Border>

                <!-- Rows -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding TokenRows}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource RowButton}"
                                        Command="{Binding DataContext.OpenDetailsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding Row}">
                                    <Border BorderBrush="#1E2A46" BorderThickness="0,0,0,1" Padding="8,7">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="28"/>
                                                <!-- ⭐ -->
                                                <ColumnDefinition Width="30"/>
                                                <!-- Icon -->
                                                <ColumnDefinition Width="78"/>
                                                <ColumnDefinition Width="88"/>
                                                <ColumnDefinition Width="85"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="90"/>
                                                <ColumnDefinition Width="110"/>
                                                <ColumnDefinition Width="70"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- ⭐ Favorite -->
                                            <Button Grid.Column="0"
                                                    Style="{StaticResource StarIconButton}"
                                                    Command="{Binding DataContext.ToggleFavoriteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding Row}"
                                                    Focusable="False">
                                                <materialDesign:PackIcon Width="16" Height="16">
                                                    <materialDesign:PackIcon.Style>
                                                        <Style TargetType="materialDesign:PackIcon">
                                                            <Setter Property="Kind" Value="StarOutline"/>
                                                            <Setter Property="Foreground" Value="#64748B"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                                    <Setter Property="Kind" Value="Star"/>
                                                                    <Setter Property="Foreground" Value="#FBBF24"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </materialDesign:PackIcon.Style>
                                                </materialDesign:PackIcon>
                                            </Button>

                                            <!-- Icon -->
                                            <Border Grid.Column="1"
                                                    Width="22" Height="22" CornerRadius="6"
                                                    Background="#0B1220" BorderBrush="#24314E" BorderThickness="1"
                                                    ClipToBounds="True" VerticalAlignment="Center">
                                                <Image Source="{Binding IconUrl}" Stretch="UniformToFill"/>
                                            </Border>

                                            <!-- Symbol -->
                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="{Binding Symbol}" FontWeight="SemiBold" Foreground="White"/>
                                                <TextBlock Text="{Binding Blockchain}" Foreground="#64748B" FontSize="10"/>
                                            </StackPanel>

                                            <!-- Last -->
                                            <TextBlock Grid.Column="3"
                                                       Text="{Binding Price, StringFormat={}{0:N2}}"
                                                       Foreground="White"/>

                                            <!-- Δ -->
                                            <StackPanel Grid.Column="4" Orientation="Horizontal">
                                                <TextBlock Text="{Binding Change, Converter={StaticResource ChangeToArrowConverter}}"
                                                           Foreground="{Binding Change, Converter={StaticResource ChangeToBrushConverter}}"
                                                           FontWeight="SemiBold" Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding Change, StringFormat={}{0:N2}}"
                                                           Foreground="{Binding Change, Converter={StaticResource ChangeToBrushConverter}}"
                                                           FontWeight="SemiBold"/>
                                            </StackPanel>

                                            <!-- Δ% -->
                                            <TextBlock Grid.Column="5"
                                                       Text="{Binding ChangePct, StringFormat={}{0:N2}%}"
                                                       Foreground="{Binding Change, Converter={StaticResource ChangeToBrushConverter}}"
                                                       FontWeight="SemiBold"/>

                                            <!-- Yesterday -->
                                            <TextBlock Grid.Column="6"
                                                       Text="{Binding PriceYesterday, StringFormat={}{0:N6}}"
                                                       Foreground="#94A3B8"
                                                       Visibility="{Binding DataContext.ShowYesterday, Converter={StaticResource BoolToVis}, RelativeSource={RelativeSource AncestorType=Window}}"/>

                                            <!-- Volume -->
                                            <TextBlock Grid.Column="7"
                                                       Text="{Binding VolumeYesterdayUsd, StringFormat={}{0:N0}}"
                                                       Foreground="#94A3B8"
                                                       Visibility="{Binding DataContext.ShowVolume, Converter={StaticResource BoolToVis}, RelativeSource={RelativeSource AncestorType=Window}}"/>

                                            <!-- Updated -->
                                            <TextBlock Grid.Column="8"
                                                       Text="{Binding UpdatedTime, StringFormat={}{0:HH:mm:ss}}"
                                                       Foreground="#94A3B8"
                                                       Visibility="{Binding DataContext.ShowUpdated, Converter={StaticResource BoolToVis}, RelativeSource={RelativeSource AncestorType=Window}}"/>

                                        </Grid>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- RWA TABLE -->
        <Border Grid.Row="3" CornerRadius="14" Background="#111B35" BorderBrush="#1E2A46" BorderThickness="1" Margin="0,12,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Background="#0B1220" BorderBrush="#1E2A46" BorderThickness="0,0,0,1" Padding="8,6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="28"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="90"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="2" Text="RWA" Style="{StaticResource HeaderText}"/>
                        <TextBlock Grid.Column="3" Text="Name" Style="{StaticResource HeaderText}"/>
                        <TextBlock Grid.Column="4" Text="Price" Style="{StaticResource HeaderText}"/>
                        <TextBlock Grid.Column="5" Text="Updated" Style="{StaticResource HeaderText}"/>
                    </Grid>
                </Border>

                <!-- Rows -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding RwaRows}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource RowButton}"
                                Command="{Binding DataContext.OpenRwaDetailsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding Row}">
                                    <Border BorderBrush="#1E2A46" BorderThickness="0,0,0,1" Padding="8,7">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="28"/>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="140"/>
                                                <ColumnDefinition Width="180"/>
                                                <ColumnDefinition Width="90"/>
                                                <ColumnDefinition Width="90"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- ⭐ Favorite -->
                                            <Button Grid.Column="0"
                                            Style="{StaticResource StarIconButton}"
                                            Command="{Binding DataContext.ToggleRwaFavoriteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding Row}"
                                            Focusable="False">
                                                <materialDesign:PackIcon Width="16" Height="16">
                                                    <materialDesign:PackIcon.Style>
                                                        <Style TargetType="materialDesign:PackIcon">
                                                            <Setter Property="Kind" Value="StarOutline"/>
                                                            <Setter Property="Foreground" Value="#64748B"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                                    <Setter Property="Kind" Value="Star"/>
                                                                    <Setter Property="Foreground" Value="#FBBF24"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </materialDesign:PackIcon.Style>
                                                </materialDesign:PackIcon>
                                            </Button>

                                            <!-- Icon -->
                                            <Border Grid.Column="1"
                                            Width="22" Height="22" CornerRadius="6"
                                            Background="#0B1220" BorderBrush="#24314E" BorderThickness="1"
                                            ClipToBounds="True" VerticalAlignment="Center">
                                                <Image Source="{Binding IconPath}" Stretch="UniformToFill"/>
                                            </Border>

                                            <!-- Ticker + Type -->
                                            <StackPanel Grid.Column="2">
                                                <TextBlock Text="{Binding Ticker}" FontWeight="SemiBold" Foreground="White"/>
                                                <TextBlock Text="{Binding Type}" Foreground="#64748B" FontSize="10"/>
                                            </StackPanel>

                                            <!-- Name -->
                                            <TextBlock Grid.Column="3" Text="{Binding Name}" Foreground="#94A3B8" TextTrimming="CharacterEllipsis"/>

                                            <!-- Price -->
                                            <TextBlock Grid.Column="4" Text="{Binding Price, StringFormat={}{0:N4}}" Foreground="White"/>

                                            <!-- Updated -->
                                            <TextBlock Grid.Column="5" Text="{Binding UpdatedTime, StringFormat={}{0:HH:mm:ss}}" Foreground="#94A3B8"/>
                                        </Grid>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

    </Grid>
</Window>
