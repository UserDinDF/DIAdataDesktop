<Window x:Class="DIAdataDesktop.Views.WatchlistWidgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DIAdataDesktop.Views"
        xmlns:vm="clr-namespace:DIAdataDesktop.ViewModels"
        xmlns:conv="clr-namespace:DIAdataDesktop.Converters"
        Style="{StaticResource CustomWindowStyle}"
        Title="Watchlist"
        Width="420" Height="520"
        WindowStartupLocation="CenterOwner"
        Background="#0B1220"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="False"
        Topmost="{Binding IsTopmost, Mode=TwoWay}">

    <Window.Resources>
        <conv:ChangeToBrushConverter x:Key="ChangeToBrushConverter"/>
        <conv:ChangeToArrowConverter x:Key="ChangeToArrowConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="FontSize" Value="12.5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="RowButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" Background="Transparent" CornerRadius="10">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#111B35"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar -->
        <Border CornerRadius="14" Background="#111B35" BorderBrush="#1E2A46" BorderThickness="1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Watchlist" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding StatusLine}" Foreground="#94A3B8" FontSize="11"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                        <TextBlock Text="Topmost" Foreground="#94A3B8" FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ToggleButton Style="{StaticResource ToggleSwitch}"
                  IsChecked="{Binding IsTopmost, Mode=TwoWay}"/>
                    </StackPanel>
                    
                    <Button Content="Refresh" Padding="10,4" Style="{StaticResource   PrimaryButton}"
                            Command="{Binding RefreshCommand}"/> 
                </StackPanel>
            </Grid>
        </Border>

        <!-- Column toggles -->
        <Border Grid.Row="2" CornerRadius="14" Background="#0F1B33" BorderBrush="#1E2A46" BorderThickness="1" Padding="10">
            <WrapPanel>
                <CheckBox Content="Yesterday" Foreground="#E5E7EB" Margin="0,0,12,6" IsChecked="{Binding ShowYesterday}"/>
                <CheckBox Content="Volume" Foreground="#E5E7EB" Margin="0,0,12,6" IsChecked="{Binding ShowVolume}"/>
                <CheckBox Content="Updated" Foreground="#E5E7EB" Margin="0,0,12,6" IsChecked="{Binding ShowUpdated}"/>
            </WrapPanel>
        </Border>

        <!-- Header row -->
        <Border Grid.Row="4" CornerRadius="14" Background="#111B35" BorderBrush="#1E2A46" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- table header -->
                <Border Background="#0B1220" BorderBrush="#1E2A46" BorderThickness="0,0,0,1" Padding="8,6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="78"/>
                            <ColumnDefinition Width="88"/>
                            <ColumnDefinition Width="74"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="70"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="" />
                        <TextBlock Grid.Column="1" Text="Symbol" Style="{StaticResource HeaderText}"/>
                        <TextBlock Grid.Column="2" Text="Last" Style="{StaticResource HeaderText}"/>
                        <TextBlock Grid.Column="3" Text="Δ" Style="{StaticResource HeaderText}"/>
                        <TextBlock Grid.Column="4" Text="Δ%" Style="{StaticResource HeaderText}"/>

                        <TextBlock Grid.Column="5" Text="Yesterday" Style="{StaticResource HeaderText}"
                                   Visibility="{Binding ShowYesterday, Converter={StaticResource BoolToVis}}"/>

                        <TextBlock Grid.Column="6" Text="Volume" Style="{StaticResource HeaderText}"
                                   Visibility="{Binding ShowVolume, Converter={StaticResource BoolToVis}}"/>

                        <TextBlock Grid.Column="7" Text="Updated" Style="{StaticResource HeaderText}"
                                   Visibility="{Binding ShowUpdated, Converter={StaticResource BoolToVis}}"/>
                    </Grid>
                </Border>

                <!-- rows -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Rows}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource RowButton}"
                                        Command="{Binding DataContext.OpenDetailsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding Row}">
                                    <Border BorderBrush="#1E2A46" BorderThickness="0,0,0,1" Padding="8,7">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30"/>
                                                <ColumnDefinition Width="78"/>
                                                <ColumnDefinition Width="88"/>
                                                <ColumnDefinition Width="74"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="90"/>
                                                <ColumnDefinition Width="110"/>
                                                <ColumnDefinition Width="70"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Icon -->
                                            <Border Width="22" Height="22" CornerRadius="6"
                                                    Background="#0B1220" BorderBrush="#24314E" BorderThickness="1"
                                                    ClipToBounds="True" VerticalAlignment="Center">
                                                <Image Source="{Binding IconUrl}" Stretch="UniformToFill"/>
                                            </Border>

                                            <!-- Symbol -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Symbol}" FontWeight="SemiBold" Foreground="White"/>
                                                <TextBlock Text="{Binding Blockchain}" Foreground="#64748B" FontSize="10"/>
                                            </StackPanel>

                                            <!-- Last -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding Price, StringFormat={}{0:N2}}" Foreground="White"/>

                                            <!-- Δ -->
                                            <StackPanel Grid.Column="3" Orientation="Horizontal">
                                                <TextBlock Text="{Binding Change, Converter={StaticResource ChangeToArrowConverter}}" 
                                                           Foreground="{Binding Change, Converter={StaticResource ChangeToBrushConverter}}"
                                                           FontWeight="SemiBold" Margin="0,0,4,0"/>
                                                <TextBlock Text="{Binding Change, StringFormat={}{0:N6}}"
                                                           Foreground="{Binding Change, Converter={StaticResource ChangeToBrushConverter}}"
                                                           FontWeight="SemiBold"/>
                                            </StackPanel>

                                            <!-- Δ% -->
                                            <TextBlock Grid.Column="4"
                                                       Text="{Binding ChangePct, StringFormat={}{0:N2}%}"
                                                       Foreground="{Binding Change, Converter={StaticResource ChangeToBrushConverter}}"
                                                       FontWeight="SemiBold"/>

                                            <!-- Yesterday -->
                                            <TextBlock Grid.Column="5"
                                                       Text="{Binding PriceYesterday, StringFormat={}{0:N6}}"
                                                       Foreground="#94A3B8"
                                                       Visibility="{Binding DataContext.ShowYesterday, Converter={StaticResource BoolToVis}, RelativeSource={RelativeSource AncestorType=Window}}"/>

                                            <!-- Volume -->
                                            <TextBlock Grid.Column="6"
                                                       Text="{Binding VolumeYesterdayUsd, StringFormat={}{0:N0}}"
                                                       Foreground="#94A3B8"
                                                       Visibility="{Binding DataContext.ShowVolume, Converter={StaticResource BoolToVis}, RelativeSource={RelativeSource AncestorType=Window}}"/>

                                            <!-- Updated -->
                                            <TextBlock Grid.Column="7"
                                                       Text="{Binding UpdatedTime, StringFormat={}{0:HH:mm:ss}}"
                                                       Foreground="#94A3B8"
                                                       Visibility="{Binding DataContext.ShowUpdated, Converter={StaticResource BoolToVis}, RelativeSource={RelativeSource AncestorType=Window}}"/>

                                        </Grid>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
