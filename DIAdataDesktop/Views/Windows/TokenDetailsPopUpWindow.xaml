<Window x:Class="DIAdataDesktop.Views.Windows.TokenDetailsPopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:DIAdataDesktop.Converters"
        mc:Ignorable="d"
        Width="260" Height="380"
        WindowStartupLocation="Manual"
        Left="20" Top="20"
        WindowStyle="None"
        Style="{StaticResource CustomWindowStyle}"
        Background="#0B1220"
        AllowsTransparency="False"
        Topmost="True">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER (compact) -->
        <Border CornerRadius="14"
                Background="#111B35"
                BorderBrush="#1E2A46"
                BorderThickness="1"
                Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="{Binding Row.Name}"
                               Foreground="#E5E7EB"
                               FontSize="14"
                               FontWeight="SemiBold"
                               TextTrimming="CharacterEllipsis"/>
                    <StackPanel Orientation="Horizontal" Margin="0,1,0,0">
                        <TextBlock Text="{Binding Row.Symbol}" Foreground="#94A3B8" FontSize="11"/>
                        <TextBlock Text="  •  " Foreground="#94A3B8" FontSize="11"/>
                        <TextBlock Text="{Binding Row.Blockchain}" Foreground="#94A3B8" FontSize="11"
                                   TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </StackPanel>

                <!-- right controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                    <!-- Topmost tiny -->
                    <ToggleButton x:Name="TopmostCheckBox"
                                
                                  Margin="0,0,6,0"
                                  Background="#0B1220"
                                  BorderBrush="#24314E"
                                  BorderThickness="1"
                                  Foreground="#E5E7EB"
                                  Cursor="Hand"
                                  Checked="TopmostCheckBox_Checked"
                                  Unchecked="TopmostCheckBox_Unchecked">
                        <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <Border x:Name="bd"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="10">
                                    <materialDesign:PackIcon Kind="Pin" Width="14" Height="14"
                                                             Foreground="{TemplateBinding Foreground}"
                                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bd" Property="BorderBrush" Value="#2D64E3"/>
                                        <Setter TargetName="bd" Property="Background" Value="#111B35"/>
                                    </Trigger>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="bd" Property="Background" Value="#14254A"/>
                                        <Setter TargetName="bd" Property="BorderBrush" Value="#2D64E3"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </ToggleButton.Template>
                    </ToggleButton>

                    <!-- Open Browser icon -->
                    <Button 
                            Background="#0B1220"
                            BorderBrush="#24314E"
                            Style="{StaticResource GhostButton}"
                            BorderThickness="1"
                            Cursor="Hand"
                            Command="{Binding OpenBrowserCommand}">
                        <materialDesign:PackIcon Kind="OpenInNew" Width="14" Height="14" Foreground="#E5E7EB"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- CONTENT -->
        <Border Grid.Row="2"
                CornerRadius="14"
                Background="#111B35"
                BorderBrush="#1E2A46"
                BorderThickness="1"
                Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Price -->
                    <StackPanel Visibility="{Binding ShowPrice, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Price" Foreground="#94A3B8" FontWeight="SemiBold" FontSize="11"/>
                        <TextBlock Text="{Binding Row.Price, StringFormat=$ {0:N2}}"
                                   Foreground="#E5E7EB" FontSize="16" FontWeight="SemiBold"/>
                        <Separator Margin="0,6,0,6" Background="#24314E"/>
                    </StackPanel>

                    <!-- Volume -->
                    <StackPanel Visibility="{Binding ShowVolume, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="24h Volume" Foreground="#94A3B8" FontWeight="SemiBold" FontSize="11"/>
                        <TextBlock Text="{Binding Row.Quotation.VolumeYesterdayUSD, StringFormat=$ {0:N0}}"
                                   Foreground="#E5E7EB" FontSize="14" FontWeight="SemiBold"/>
                        <Separator Margin="0,6,0,6" Background="#24314E"/>
                    </StackPanel>

                    <!-- Sources -->
                    <StackPanel Visibility="{Binding ShowSources, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Sources" Foreground="#94A3B8" FontWeight="SemiBold" FontSize="11"/>
                        <TextBlock Text="{Binding Row.CexExchangesCount}"
                                   Foreground="#E5E7EB" FontSize="14" FontWeight="SemiBold"/>
                        <Separator Margin="0,6,0,6" Background="#24314E"/>
                    </StackPanel>

                    <!-- Updated -->
                    <StackPanel Visibility="{Binding ShowUpdated, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Updated" Foreground="#94A3B8" FontWeight="SemiBold" FontSize="11"/>
                        <TextBlock Text="{Binding Row.Time, StringFormat={}{0:HH:mm:ss}}"
                                   Foreground="#E5E7EB" FontSize="13" FontWeight="SemiBold"/>
                        <Separator Margin="0,6,0,6" Background="#24314E"/>
                    </StackPanel>

                    <!-- Price Yesterday -->
                    <StackPanel Visibility="{Binding ShowPriceYesterday, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Yesterday" Foreground="#94A3B8" FontWeight="SemiBold" FontSize="11"/>
                        <TextBlock Text="{Binding Row.Quotation.PriceYesterday, StringFormat=$ {0:N2}}"
                                   Foreground="#E5E7EB" FontSize="13" FontWeight="SemiBold"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- FOOTER (single line, tiny) -->
        <TextBlock Grid.Row="3"
                   Margin="2,6,2,0"
                   Foreground="#64748B"
                   FontSize="10"
                   Text="{Binding Row.Address}"
                   TextTrimming="CharacterEllipsis"/>
    </Grid>
</Window>
