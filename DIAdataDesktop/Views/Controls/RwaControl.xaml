<UserControl x:Class="DIAdataDesktop.Views.Controls.RwaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent">

    <UserControl.Resources>
        <Style x:Key="TokenCardButton" TargetType="Button">
            <Setter Property="Background" Value="#111B35"/>
            <Setter Property="BorderBrush" Value="#1E2A46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16"
                                SnapsToDevicePixels="True">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="BorderBrush" Value="#2D64E3"/>
                                <Setter TargetName="bd" Property="Background" Value="#141F3E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.99" ScaleY="0.99"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="bd" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,16,16"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MutedLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Real World Assets" Foreground="#E5E7EB" FontSize="22" FontWeight="SemiBold"/>
                <TextBlock Margin="10,0,0,0" Text="{Binding FilteredCount, StringFormat=({0} shown)}"
                           Foreground="#64748B" FontSize="22" FontWeight="SemiBold"/>
                <TextBlock Margin="10,0,0,0" Text="{Binding TotalCount, StringFormat=/ {0} total}"
                           Foreground="#475569" FontSize="22" FontWeight="SemiBold"/>
            </StackPanel>

            <TextBlock Text="{Binding StatusText}" Foreground="#94A3B8" Margin="0,3,0,0"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center">
                <Button Content="⟪" Command="{Binding GoToFirstCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,6,0"/>
                <Button Content="‹ Prev" Command="{Binding PrevPageCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>

                <TextBlock Foreground="#94A3B8" VerticalAlignment="Center"
                           Text="{Binding CurrentPage, StringFormat=Page {0}}"/>
                <TextBlock Foreground="#94A3B8" VerticalAlignment="Center" Text=" / "/>
                <TextBlock Foreground="#94A3B8" VerticalAlignment="Center" Text="{Binding TotalPages}"/>

                <Button Content="Next ›" Command="{Binding NextPageCommand}" Style="{StaticResource PrimaryButton}" Margin="10,0,6,0"/>
                <Button Content="⟫" Command="{Binding GoToLastCommand}" Style="{StaticResource PrimaryButton}"/>

                <Button Content="Refresh" Command="{Binding RefreshAllCommand}" Style="{StaticResource PrimaryButton}" Margin="16,0,0,0"/>

                <TextBlock Foreground="#64748B" Margin="18,0,6,0" VerticalAlignment="Center" Text="Page size"/>
                <ComboBox Style="{StaticResource DarkComboBox}"
                          Width="90"
                          ItemsSource="{Binding PageSizes}"
                          SelectedItem="{Binding PageSize, Mode=TwoWay}"
                          Margin="0,0,16,0"/>

                <TextBlock Foreground="#64748B" VerticalAlignment="Center" Text="Search" Margin="0,0,8,0"/>
                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Width="260"
                         Style="{StaticResource DarkTextBox}"/>
            </StackPanel>
        </StackPanel>

        <ListBox Grid.Row="2"
                 ItemsSource="{Binding PagedRows}"
                 Background="Transparent"
                 BorderThickness="0"
                 ItemContainerStyle="{StaticResource CardListBoxItemStyle}"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 VirtualizingPanel.IsVirtualizing="True"
                 VirtualizingPanel.VirtualizationMode="Recycling">

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Style="{StaticResource TokenCardButton}"
                            Width="360" Height="190"
                            Click="RwaCard_Click">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="14"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="36" Height="36" CornerRadius="10"
                                        Background="#0B1220" BorderBrush="#24314E" BorderThickness="1"
                                        ClipToBounds="True">
                                    <Image Source="{Binding IconPngPath}"
                                           Stretch="UniformToFill"
                                           ImageFailed="RwaIcon_ImageFailed"/>
                                </Border>

                                <TextBlock Grid.Column="2"
                                           Text="{Binding Name}"
                                           Foreground="#E5E7EB"
                                           FontSize="22"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Style="{StaticResource StarIconButton}"
                                            Click="FavoriteBtn_Click"
                                            Tag="{Binding}">
                                        <materialDesign:PackIcon Width="16" Height="16">
                                            <materialDesign:PackIcon.Style>
                                                <Style TargetType="materialDesign:PackIcon">
                                                    <Setter Property="Kind" Value="StarOutline"/>
                                                    <Setter Property="Foreground" Value="#64748B"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                            <Setter Property="Kind" Value="Star"/>
                                                            <Setter Property="Foreground" Value="#FBBF24"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </materialDesign:PackIcon.Style>
                                        </materialDesign:PackIcon>
                                    </Button>

                                    <Border CornerRadius="6" Background="#F8FAFC" Padding="8,2" Margin="10,0,10,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Badge}" Foreground="#0B1220" FontWeight="SemiBold"/>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <TextBlock Grid.Row="2" Style="{StaticResource MutedLabel}" Text="Asset price"/>
                            <TextBlock Grid.Row="2" Margin="0,18,0,0"
                                       Foreground="#E5E7EB"
                                       FontSize="22"
                                       FontWeight="SemiBold"
                                       Text="{Binding Price, StringFormat=$ {0:N4}}"/>

                            <Grid Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Style="{StaticResource MutedLabel}" Text="Exchange"/>
                                    <TextBlock Foreground="#E5E7EB" FontWeight="SemiBold"
                                               Text="{Binding ExchangeDisplay}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Style="{StaticResource MutedLabel}" Text="Type"/>
                                    <TextBlock Foreground="#E5E7EB" FontWeight="SemiBold"
                                               Text="{Binding TypeDisplay}"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
