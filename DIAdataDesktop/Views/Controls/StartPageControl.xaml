<UserControl x:Class="DIAdataDesktop.Views.Controls.StartPageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:DIAdataDesktop.Converters"
             mc:Ignorable="d"
             Background="Transparent">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <LinearGradientBrush x:Key="PageBg" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0B1220" Offset="0"/>
            <GradientStop Color="#0B1220" Offset="0.35"/>
            <GradientStop Color="#081127" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="HubCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="BorderBrush" Value="#1E2A46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#121C39" Offset="0"/>
                        <GradientStop Color="#0F1933" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CtaButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#2D64E3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#C7F9D4"/>
            <Setter Property="Foreground" Value="#0B1220"/>
        </Style>

        <Style x:Key="MiniIconButton" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#24314E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd" CornerRadius="8"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#111B35"/>
                                <Setter TargetName="bd" Property="BorderBrush" Value="#2D64E3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FavItemBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Background" Value="#111B35"/>
            <Setter Property="BorderBrush" Value="#1E2A46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
        </Style>

        <DataTemplate x:Key="FavAssetTemplate">
            <Border Style="{StaticResource FavItemBorder}" Margin="0,0,14,14" Width="250">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="38"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Width="38" Height="38" CornerRadius="12"
                            Background="#0B1220" BorderBrush="#24314E" BorderThickness="1"
                            ClipToBounds="True">
                        <Image Source="{Binding IconUrl}" Stretch="UniformToFill"/>
                    </Border>

                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Title}" Foreground="#E5E7EB" FontWeight="SemiBold" FontSize="14"/>
                        <TextBlock Text="{Binding Subtitle}" Foreground="#94A3B8" FontSize="11" Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{StaticResource MiniIconButton}"
                                Command="{Binding ToggleFavoriteCommand}"
                                ToolTip="Remove from favorites"
                                Margin="0,0,8,0">
                            <materialDesign:PackIcon Kind="Star" Width="16" Height="16" Foreground="#FBBF24"/>
                        </Button>

                        <Button Style="{StaticResource MiniIconButton}"
                                Command="{Binding OpenCommand}"
                                ToolTip="Open details">
                            <materialDesign:PackIcon Kind="OpenInNew" Width="16" Height="16" Foreground="#64748B"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="FavExchangeTemplate">
            <Border Style="{StaticResource FavItemBorder}" Margin="0,0,14,14" Width="250">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="38"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Width="38" Height="38" CornerRadius="12"
                            Background="#0B1220" BorderBrush="#24314E" BorderThickness="1"
                            ClipToBounds="True">
                        <Image Width="38" Loaded="SvgLogo_Loaded" Stretch="Uniform"/>

                    </Border>

                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Title}" TextWrapping="WrapWithOverflow"  Foreground="#E5E7EB" FontWeight="SemiBold" FontSize="14"/>
                        <TextBlock Text="{Binding Subtitle}" TextWrapping="WrapWithOverflow" Foreground="#94A3B8" FontSize="11" Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{StaticResource MiniIconButton}"
                                Command="{Binding ToggleFavoriteCommand}"
                                ToolTip="Remove from favorites"
                                Margin="0,0,8,0">
                            <materialDesign:PackIcon Kind="Star" Width="16" Height="16" Foreground="#FBBF24"/>
                        </Button>

                        <Button Style="{StaticResource MiniIconButton}"
                                Command="{Binding OpenCommand}"
                                ToolTip="Open source page">
                            <materialDesign:PackIcon Kind="OpenInNew" Width="16" Height="16" Foreground="#64748B"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="FavRwaTemplate">
            <Border Style="{StaticResource FavItemBorder}" Margin="0,0,14,14" Width="250">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="38"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Width="38" Height="38" CornerRadius="12"
                    Background="#0B1220" BorderBrush="#24314E" BorderThickness="1"
                    ClipToBounds="True">
                        <Image Source="{Binding IconPngPath}" Stretch="UniformToFill"/>
                    </Border>

                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Title}" Foreground="#E5E7EB" FontWeight="SemiBold" FontSize="14"/>
                        <TextBlock Text="{Binding Subtitle}" Foreground="#94A3B8" FontSize="11" Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{StaticResource MiniIconButton}"
                        Command="{Binding ToggleFavoriteCommand}"
                        ToolTip="Remove from favorites"
                        Margin="0,0,8,0">
                            <materialDesign:PackIcon Kind="Star" Width="16" Height="16" Foreground="#FBBF24"/>
                        </Button>

                        <Button Style="{StaticResource MiniIconButton}"
                        Command="{Binding OpenCommand}"
                        ToolTip="Open RWA app">
                            <materialDesign:PackIcon Kind="OpenInNew" Width="16" Height="16" Foreground="#64748B"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Background="{StaticResource PageBg}" PreviewMouseWheel="BubbleMouseWheelToParent">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0">
                <TextBlock Text="Welcome to the DIA Desktop App"
                           Foreground="#E5E7EB"
                           FontSize="28"
                           FontWeight="SemiBold"/>

                <TextBlock Text="Dashboard"
           Foreground="#E5E7EB"
           FontSize="18"
           FontWeight="SemiBold"
           Margin="0,10,0,10"/>

                <ItemsControl ItemsSource="{Binding Stats}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource HubCard}" Width="270" Margin="0,0,8,8" Padding="7">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="46"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="46" Height="46" CornerRadius="14"
                            Background="#0B1220" BorderBrush="#24314E" BorderThickness="1">
                                        <materialDesign:PackIcon Width="22" Height="22"
                                                 Foreground="#E5E7EB"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center">
                                            <materialDesign:PackIcon.Kind>
                                                <Binding Path="IconKind"/>
                                            </materialDesign:PackIcon.Kind>
                                        </materialDesign:PackIcon>
                                    </Border>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="{Binding Title}"
                                   Foreground="#94A3B8"
                                   FontSize="12"
                                   FontWeight="SemiBold"/>

                                        <TextBlock Text="{Binding Value}"
                                   Foreground="#E5E7EB"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Margin="0,3,0,0"/>

                                        <TextBlock Text="{Binding Subtitle}"
                                   Foreground="#64748B"
                                   FontSize="11"
                                   Margin="0,2,0,0"
                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border Height="18" Background="Transparent"/>

                <TextBlock Text="Integrate DIA data feeds"
                           Foreground="#E5E7EB"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource HubCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="44" Height="44" CornerRadius="14"
                                        Background="#0B1220" BorderBrush="#24314E" BorderThickness="1"
                                        VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="CurrencyUsd" Width="22" Height="22"
                                                             Foreground="#E5E7EB"
                                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="Digital Assets" Foreground="#E5E7EB" FontSize="18" FontWeight="SemiBold"/>
                                    <TextBlock Text="Token price feeds" Foreground="#94A3B8" FontSize="12"/>
                                </StackPanel>
                            </StackPanel>

                            <Separator Margin="0,14,0,14" Background="#1E2A46"/>

                            <TextBlock Text="Explore token feeds, prices, volume and sources (CEX/DEX)."
                                       Foreground="#B6C2D6"
                                       TextWrapping="Wrap"/>

                            <Button Margin="0,16,0,0"
                                    Style="{StaticResource DarkNavButton}"
                                    Command="{Binding OpenAssetsCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="EXPLORE ASSETS" Margin="0,0,10,0"/>
                                    <materialDesign:PackIcon Kind="ArrowRight" Width="18" Height="18"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource HubCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Border Width="44" Height="44" CornerRadius="14"
                                        Background="#0B1220" BorderBrush="#24314E" BorderThickness="1"
                                        VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Bank" Width="22" Height="22"
                                                             Foreground="#E5E7EB"
                                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock Text="Exchanges" Foreground="#E5E7EB" FontSize="18" FontWeight="SemiBold"/>
                                    <TextBlock Text="CEX sources overview" Foreground="#94A3B8" FontSize="12"/>
                                </StackPanel>
                            </StackPanel>

                            <Separator Margin="0,14,0,14" Background="#1E2A46"/>

                            <TextBlock Text="Browse exchanges, volume, trades, pairs and source pages."
                                       Foreground="#B6C2D6"
                                       TextWrapping="Wrap"/>

                            <Button Margin="0,16,0,0"
                                    Style="{StaticResource DarkNavButton}"
                                    Command="{Binding OpenExchangesCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="EXPLORE EXCHANGES" Margin="0,0,10,0"/>
                                    <materialDesign:PackIcon Kind="ArrowRight" Width="18" Height="18"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Height="22" Background="Transparent"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Favorites — Assets" Foreground="#E5E7EB" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding FavoriteAssets.Count, StringFormat=  ({0})}"
                                       Foreground="#64748B" FontSize="16" FontWeight="SemiBold" Margin="8,0,0,0"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding FavoriteAssets}"
                                      ItemTemplate="{StaticResource FavAssetTemplate}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>

                        <TextBlock Text="No favorite assets yet. Star some tokens in Explore Assets." TextWrapping="WrapWithOverflow"
                                   Foreground="#94A3B8"
                                   Margin="0,4,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasFavoriteAssets}" Value="False">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Favorites — Exchanges" Foreground="#E5E7EB" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding FavoriteExchanges.Count, StringFormat=  ({0})}" 
                                       Foreground="#64748B" FontSize="16" FontWeight="SemiBold" Margin="8,0,0,0"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding FavoriteExchanges}"
                                      ItemTemplate="{StaticResource FavExchangeTemplate}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>

                        <TextBlock Text="No favorite exchanges yet. Star some exchanges in Explore Exchanges." TextWrapping="WrapWithOverflow"
                                   Foreground="#94A3B8"
                                   Margin="0,4,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasFavoriteExchanges}" Value="False">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                            </TextBlock>

                    </StackPanel>

                    <Border Height="22" Background="Transparent"/>

                    <StackPanel Grid.Column="4">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Favorites — RWAs" Foreground="#E5E7EB" FontSize="16" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding FavoriteRWAs.Count, StringFormat=  ({0})}"
                   Foreground="#64748B" FontSize="16" FontWeight="SemiBold" Margin="8,0,0,0"/>
                        </StackPanel>

                        <ItemsControl ItemsSource="{Binding FavoriteRWAs}"
                  ItemTemplate="{StaticResource FavRwaTemplate}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>

                        <TextBlock Text="No favorite RWAs yet. Star some RWAs in Explore RWA." TextWrapping="WrapWithOverflow"
               Foreground="#94A3B8"
               Margin="0,4,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasFavoriteRWAs}" Value="False">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </Grid>

                <Border Height="30" Background="Transparent"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
