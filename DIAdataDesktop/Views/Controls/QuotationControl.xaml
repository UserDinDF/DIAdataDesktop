<UserControl x:Class="DIAdataDesktop.Views.Controls.QuotationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Style="{StaticResource CardBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Quotation" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Opacity="0.65" Text="Query by Symbol or by Asset Address"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Mode:" Margin="0,0,8,0" Opacity="0.7" VerticalAlignment="Center"/>

                    <RadioButton Content="Symbol"
                                 Margin="0,0,10,0"
                                 IsChecked="{Binding Mode, Mode=TwoWay,
                                                     Converter={StaticResource StringEqualsToBool},
                                                     ConverterParameter=Symbol}"/>

                    <RadioButton Content="Address"
                                 IsChecked="{Binding Mode, Mode=TwoWay,
                                                     Converter={StaticResource StringEqualsToBool},
                                                     ConverterParameter=Address}"/>
                </StackPanel>
            </Grid>

            <!-- Inputs -->
            <Border Grid.Row="2" Background="#FAFAFF" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="14" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelText}" Text="Symbol"/>
                    <TextBox Grid.Row="0" Grid.Column="1"
                             Text="{Binding Symbol, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="IsEnabled" Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Mode}" Value="Address">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Opacity" Value="0.55"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelText}" Text="Blockchain"/>
                    <TextBox Grid.Row="2" Grid.Column="1"
                             Text="{Binding Blockchain, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="IsEnabled" Value="False"/>
                                <Setter Property="Opacity" Value="0.55"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Mode}" Value="Address">
                                        <Setter Property="IsEnabled" Value="True"/>
                                        <Setter Property="Opacity" Value="1"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource LabelText}" Text="Asset Address"/>
                    <TextBox Grid.Row="4" Grid.Column="1"
                             Text="{Binding AssetAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="IsEnabled" Value="False"/>
                                <Setter Property="Opacity" Value="0.55"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Mode}" Value="Address">
                                        <Setter Property="IsEnabled" Value="True"/>
                                        <Setter Property="Opacity" Value="1"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal">
                        <Button Style="{StaticResource PrimaryButton}"
                                Content="Load Quotation"
                                Command="{Binding LoadQuotationCommand}"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InvBool}}"/>

                        <Button Margin="10,0,0,0"
                                Style="{StaticResource GhostButton}"
                                Content="BTC Address Example"
                                Command="{Binding UseAddressExampleCommand}"/>

                        <ProgressBar Margin="12,2,0,0"
                                     Width="160" Height="10"
                                     IsIndeterminate="True"
                                     Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"
                                     VerticalAlignment="Center"/>
                    </StackPanel>

                    <Border Grid.Row="6" Grid.Column="3"
                            Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- Result -->
            <Border Grid.Row="4" Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="14" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Result" FontSize="16" FontWeight="SemiBold"/>

                        <Border Grid.Column="1" Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="1"
                                CornerRadius="999" Padding="10,6" VerticalAlignment="Center">
                            <TextBlock Text="{Binding LastUpdatedText}" FontSize="12" Opacity="0.8"/>
                        </Border>
                    </Grid>

                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <Grid Margin="0,2,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelText}" Text="Symbol"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource ValueText}" Text="{Binding Quote.Symbol}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource LabelText}" Text="Name" Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource ValueText}" Text="{Binding Quote.Name}" Margin="0,8,0,0"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelText}" Text="Blockchain" Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource ValueText}" Text="{Binding Quote.Blockchain}" Margin="0,8,0,0"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Style="{StaticResource LabelText}" Text="Address" Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource ValueText}" Text="{Binding Quote.Address}" Margin="0,8,0,0"/>

                            <TextBlock Grid.Row="4" Grid.Column="0" Style="{StaticResource LabelText}" Text="Price" Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Style="{StaticResource ValueText}"
                                       Text="{Binding Quote.Price, StringFormat={}{0:N8}}" Margin="0,8,0,0"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Style="{StaticResource LabelText}" Text="PriceYesterday" Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Style="{StaticResource ValueText}"
                                       Text="{Binding Quote.PriceYesterday, StringFormat={}{0:N8}}" Margin="0,8,0,0"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Style="{StaticResource LabelText}" Text="VolumeYesterday USD" Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Style="{StaticResource ValueText}"
                                       Text="{Binding Quote.VolumeYesterdayUSD, StringFormat={}{0:N2}}" Margin="0,8,0,0"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Style="{StaticResource LabelText}" Text="Time" Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" Style="{StaticResource ValueText}" Text="{Binding Quote.Time}" Margin="0,8,0,0"/>

                            <TextBlock Grid.Row="8" Grid.Column="0" Style="{StaticResource LabelText}" Text="Source / Signature" Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="8" Grid.Column="1" Style="{StaticResource ValueText}" Margin="0,8,0,0" TextWrapping="Wrap">
                                <Run Text="{Binding Quote.Source}"/>
                                <LineBreak/>
                                <Run Text="{Binding Quote.Signature}"/>
                            </TextBlock>
                        </Grid>
                    </ScrollViewer>

                    <Border Grid.Row="3"
                            Margin="0,12,0,0"
                            Background="#FEF2F2"
                            BorderBrush="#FECACA"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="10"
                            Visibility="{Binding Error, Converter={StaticResource StringToVis}}">
                        <TextBlock Text="{Binding Error}" Foreground="#B91C1C" TextWrapping="Wrap"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
