<UserControl x:Class="DIAdataDesktop.Views.Controls.QuotationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:DIAdataDesktop.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <UserControl.Resources>
        <converters:ObjectNullToVisibility x:Key="ObjectNullToVisibility"/>
        <converters:ObjectNotNullToVisibility x:Key="ObjectNotNullToVisibility"/>
    </UserControl.Resources>
    
    <!-- OUTER CARD -->
    <Border Style="{StaticResource CardBorder}"
            Background="#0F1B33"
            BorderBrush="#1E2A46"
            BorderThickness="1"
            CornerRadius="16"
            Padding="14">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Quotation"
                               Foreground="#E5E7EB"
                               FontSize="18"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Query by Symbol or by Asset Address"
                               Foreground="#9CA3AF"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Mode chips -->
                <Border Grid.Column="1"
                        Background="#0B1220"
                        BorderBrush="#24314E"
                        BorderThickness="1"
                        CornerRadius="999"
                        Padding="10,6"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Mode:"
                                   Foreground="#9CA3AF"
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Center"/>

                        <RadioButton Content="Symbol"
                                     Foreground="#E5E7EB"
                                     Margin="0,0,10,0"
                                     IsChecked="{Binding Mode, Mode=TwoWay,
                                                         Converter={StaticResource StringEqualsToBool},
                                                         ConverterParameter=Symbol}"/>

                        <RadioButton Content="Address"
                                     Foreground="#E5E7EB"
                                     IsChecked="{Binding Mode, Mode=TwoWay,
                                                         Converter={StaticResource StringEqualsToBool},
                                                         ConverterParameter=Address}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- INPUTS CARD -->
            <Border Grid.Row="2"
                    Background="#0B1220"
                    BorderBrush="#24314E"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="12">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Symbol -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Symbol"
                               Foreground="#9CA3AF"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

                    <TextBox Grid.Row="0" Grid.Column="1"
                             Background="#0F1B33"
                             Foreground="#E5E7EB"
                             BorderBrush="#24314E"
                             BorderThickness="1"
                             Padding="10,8"
                             materialDesign:HintAssist.Hint="e.g. DIA, BTC, ETH"
                             materialDesign:HintAssist.Foreground="#6B7280"
                             Text="{Binding Symbol, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="IsEnabled" Value="True"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Mode}" Value="Address">
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Setter Property="Opacity" Value="0.55"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Blockchain -->
                    <TextBlock Grid.Row="2" Grid.Column="0"
                               Text="Blockchain"
                               Foreground="#9CA3AF"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

                    <TextBox Grid.Row="2" Grid.Column="1"
                             Background="#0F1B33"
                             Foreground="#E5E7EB"
                             BorderBrush="#24314E"
                             BorderThickness="1"
                             Padding="10,8"
                             materialDesign:HintAssist.Hint="e.g. Ethereum, Base, Bitcoin"
                             materialDesign:HintAssist.Foreground="#6B7280"
                             Text="{Binding Blockchain, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="IsEnabled" Value="False"/>
                                <Setter Property="Opacity" Value="0.55"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Mode}" Value="Address">
                                        <Setter Property="IsEnabled" Value="True"/>
                                        <Setter Property="Opacity" Value="1"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Address -->
                    <TextBlock Grid.Row="4" Grid.Column="0"
                               Text="Asset Address"
                               Foreground="#9CA3AF"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

                    <TextBox Grid.Row="4" Grid.Column="1"
                             Background="#0F1B33"
                             Foreground="#E5E7EB"
                             BorderBrush="#24314E"
                             BorderThickness="1"
                             Padding="10,8"
                             materialDesign:HintAssist.Hint="0x… (address)"
                             materialDesign:HintAssist.Foreground="#6B7280"
                             Text="{Binding AssetAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                <Setter Property="IsEnabled" Value="False"/>
                                <Setter Property="Opacity" Value="0.55"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Mode}" Value="Address">
                                        <Setter Property="IsEnabled" Value="True"/>
                                        <Setter Property="Opacity" Value="1"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Buttons row -->
                    <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">

                        <Button Style="{StaticResource PrimaryButton}"
                                Content="Load"
                                Padding="14,8"
                                Command="{Binding LoadQuotationCommand}"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InvBool}}"/>

                        <Button Margin="10,0,0,0"
                                Style="{StaticResource GhostButton}"
                                Content="BTC Example"
                                Padding="14,8"
                                Command="{Binding UseAddressExampleCommand}"/>

                        <!-- Busy chip -->
                        <Border Margin="12,0,0,0"
                                Padding="10,6"
                                CornerRadius="999"
                                Background="#0F234A"
                                BorderBrush="#26406F"
                                BorderThickness="1"
                                VerticalAlignment="Center"
                                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}">
                            <StackPanel Orientation="Horizontal">
                                <ProgressBar Width="52" Height="8" IsIndeterminate="True"/>
                                <TextBlock Text=" Loading…"
                                           Foreground="#B6D4FF"
                                           Margin="8,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- RESULT CARD -->
            <Border Grid.Row="4"
                    Background="#0B1220"
                    BorderBrush="#24314E"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="12">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Result header -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Result"
                                   Foreground="#E5E7EB"
                                   FontSize="15"
                                   FontWeight="SemiBold"/>

                        <Border Grid.Column="1"
                                Background="#0F1B33"
                                BorderBrush="#24314E"
                                BorderThickness="1"
                                CornerRadius="999"
                                Padding="10,6"
                                VerticalAlignment="Center">
                            <TextBlock Text="{Binding LastUpdatedText}"
                                       Foreground="#9CA3AF"
                                       FontSize="12"/>
                        </Border>
                    </Grid>

                    <!-- Empty state (when Quote == null) -->
                    <Border Grid.Row="2"
                            Background="#0F1B33"
                            BorderBrush="#24314E"
                            BorderThickness="1"
                            CornerRadius="14"
                            Padding="14"
                            Visibility="{Binding Quote, Converter={StaticResource ObjectNullToVisibility}}">
                        <StackPanel>
                            <TextBlock Text="No data loaded yet."
                                       Foreground="#E5E7EB"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="Select a symbol or use Address mode, then click Load."
                                       Foreground="#9CA3AF"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto"
                                  Visibility="{Binding Quote, Converter={StaticResource ObjectNotNullToVisibility}}">
                        <Grid Margin="0,2,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- helper style-ish with consistent text -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Symbol" Foreground="#9CA3AF" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Quote.Symbol}" Foreground="#E5E7EB"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Name" Foreground="#9CA3AF" FontWeight="SemiBold" Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Quote.Name}" Foreground="#E5E7EB" Margin="0,8,0,0"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Blockchain" Foreground="#9CA3AF" FontWeight="SemiBold" Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Quote.Blockchain}" Foreground="#E5E7EB" Margin="0,8,0,0"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Address" Foreground="#9CA3AF" FontWeight="SemiBold" Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Quote.Address}" Foreground="#E5E7EB" Margin="0,8,0,0" TextWrapping="Wrap"/>

                            <!-- Price highlight -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Price" Foreground="#9CA3AF" FontWeight="SemiBold" Margin="0,10,0,0"/>
                            <Border Grid.Row="4" Grid.Column="1"
                                    Margin="0,10,0,0"
                                    Background="#0F234A"
                                    BorderBrush="#26406F"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Padding="12,10">
                                <TextBlock Text="{Binding Quote.Price, StringFormat={}{0:N8}}"
                                           Foreground="#B6D4FF"
                                           FontSize="18"
                                           FontWeight="SemiBold"/>
                            </Border>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="PriceYesterday" Foreground="#9CA3AF" FontWeight="SemiBold" Margin="0,10,0,0"/>
                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Quote.PriceYesterday, StringFormat={}{0:N8}}" Foreground="#E5E7EB" Margin="0,10,0,0"/>

                            <TextBlock Grid.Row="6" Grid.Column="0" Text="VolumeYesterday USD" Foreground="#9CA3AF" FontWeight="SemiBold" Margin="0,10,0,0"/>
                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Quote.VolumeYesterdayUSD, StringFormat={}{0:N2}}" Foreground="#E5E7EB" Margin="0,10,0,0"/>

                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Time" Foreground="#9CA3AF" FontWeight="SemiBold" Margin="0,10,0,0"/>
                            <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding Quote.Time}" Foreground="#E5E7EB" Margin="0,10,0,0"/>

                            <TextBlock Grid.Row="8" Grid.Column="0" Text="Source / Signature" Foreground="#9CA3AF" FontWeight="SemiBold" Margin="0,10,0,0"/>
                            <TextBlock Grid.Row="8" Grid.Column="1" Foreground="#E5E7EB" Margin="0,10,0,0" TextWrapping="Wrap">
                                <Run Text="{Binding Quote.Source}"/>
                                <LineBreak/>
                                <Run Text="{Binding Quote.Signature}"/>
                            </TextBlock>
                        </Grid>
                    </ScrollViewer>

                    <!-- Error box -->
                    <Border Grid.Row="3"
                            Margin="0,12,0,0"
                            Background="#2B0F12"
                            BorderBrush="#6B1F26"
                            BorderThickness="1"
                            CornerRadius="14"
                            Padding="10"
                            Visibility="{Binding Error, Converter={StaticResource StringToVis}}">
                        <TextBlock Text="{Binding Error}"
                                   Foreground="#FCA5A5"
                                   TextWrapping="Wrap"/>
                    </Border>
                </Grid>
            </Border>

        </Grid>
    </Border>
</UserControl>
