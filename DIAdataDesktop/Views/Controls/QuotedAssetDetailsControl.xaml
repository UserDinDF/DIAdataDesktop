<UserControl x:Class="DIAdataDesktop.Views.Controls.QuotedAssetDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DIAdataDesktop.Views.Controls"
             xmlns:converters="clr-namespace:DIAdataDesktop.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Background="Transparent"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <converters:BoolToAutoTextConverter x:Key="BoolToAutoTextConverter"/>
        <converters:InverseBooleanConverter x:Key="InvBool"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:DiaAssetLinkConverter x:Key="DiaAssetLinkConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#0F1B33"
                BorderBrush="#1E2A46"
                BorderThickness="1"
                CornerRadius="16"
                Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Width="42" Height="42"
                        Background="#0B1220"
                        Style="{StaticResource GhostButton}"
                        BorderBrush="#24314E"
                        BorderThickness="1"
                        Cursor="Hand"
                        Click="Back_Click">
                    <TextBlock Text="←" Foreground="#E5E7EB" FontSize="18"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Stretch="UniformToFill" Source="{Binding IconUrl}" Width="40"/>

                    <TextBlock Text="{Binding Name}"
                               Foreground="#E5E7EB"
                               VerticalAlignment="Center"
                               FontSize="30"
                               Margin="10,0,0,0"
                               FontWeight="SemiBold"/>

                    <Border Margin="10,3,0,0"
                            Padding="10,3"
                            VerticalAlignment="Center"
                            CornerRadius="8"
                            Background="White"
                            BorderBrush="#24314E"
                            BorderThickness="1">
                        <TextBlock Text="{Binding Symbol}"
                                   Foreground="Black"
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   FontWeight="SemiBold"/>
                    </Border>

                    <Border Margin="20,0,0,0"
                            Padding="12,4"
                            VerticalAlignment="Center"
                            CornerRadius="10"
                            Background="#1D4ED8"
                            BorderBrush="#2D64E3"
                            BorderThickness="1">
                        <TextBlock Text="{Binding Price, StringFormat=$ {0:N2}}"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   FontSize="16"/>
                    </Border>
                </StackPanel>

                <Button Grid.Column="3"
                        Padding="14,8"
                        Background="#0B1220"
                        Style="{StaticResource GhostButton}"
                        BorderBrush="#24314E"
                        BorderThickness="1"
                        Foreground="#E5E7EB"
                        Cursor="Hand"
                        Click="Refresh_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="14"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Grid.Column="0"
                    Background="#0F1B33"
                    BorderBrush="#1E2A46"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="14">
                <StackPanel>
                    <TextBlock Text="General information" Foreground="#E5E7EB" FontWeight="SemiBold" FontSize="16"/>

                    <TextBlock Margin="0,14,0,2" Foreground="#94A3B8" Text="Contract address"/>
                    <TextBlock Foreground="#E5E7EB" Text="{Binding Address}" TextWrapping="Wrap"/>

                    <TextBlock Margin="0,14,0,2" Foreground="#94A3B8" Text="Network"/>
                    <TextBlock Foreground="#E5E7EB" Text="{Binding Blockchain}"/>

                    <TextBlock Margin="0,14,0,2" Foreground="#94A3B8" Text="Decimals"/>
                    <TextBlock Foreground="#E5E7EB" Text="{Binding AssetDecimals, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

                    <TextBlock Margin="0,14,0,2" Foreground="#94A3B8" Text="24h Volume (USD)"/>
                    <TextBlock Foreground="#E5E7EB" Text="{Binding Volume, StringFormat=$ {0:N0}}"/>

                    <TextBlock Margin="0,14,0,2" Foreground="#94A3B8" Text="Volume yesterday (USD)"/>
                    <TextBlock Foreground="#E5E7EB" Text="{Binding Quotation.VolumeYesterdayUSD, StringFormat=$ {0:N0}}"/>

                    <TextBlock Margin="0,14,0,2" Foreground="#94A3B8" Text="Source"/>
                    <TextBlock Foreground="#E5E7EB">
    <Hyperlink Foreground="#93C5FD"
               TextDecorations="Underline"
               ToolTip="Open in DIA web app"
               RequestNavigate="Hyperlink_RequestNavigate">
        <Hyperlink.NavigateUri>
            <MultiBinding Converter="{StaticResource DiaAssetLinkConverter}">
                <Binding Path="Blockchain"/>
                <Binding Path="Address"/>
            </MultiBinding>
        </Hyperlink.NavigateUri>

        <Run Text="{Binding Quotation.Source}"/>
    </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Border>

            <Border Grid.Row="0"
                    Grid.Column="2"
                    Background="#0F1B33"
                    BorderBrush="#1E2A46"
                    BorderThickness="1"
                    CornerRadius="16"
                    MaxHeight="600"
                    Padding="14">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Analytics"
                               Foreground="#E5E7EB"
                               FontWeight="SemiBold"
                               FontSize="16"/>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                Background="#0B1220"
                                BorderBrush="#24314E"
                                BorderThickness="1"
                                CornerRadius="14"
                                Padding="12">
                            <StackPanel>
                                <TextBlock Text="24h Change"
                                           Foreground="#94A3B8"
                                           FontSize="12"/>
                                <TextBlock Text="{Binding Change24hText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           Foreground="#E5E7EB"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Margin="0,4,0,0"/>
                                <TextBlock Text="{Binding Change24hAbsText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           Foreground="#94A3B8"
                                           FontSize="12"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2"
                                Background="#0B1220"
                                BorderBrush="#24314E"
                                BorderThickness="1"
                                CornerRadius="14"
                                Padding="12">
                            <StackPanel>
                                <TextBlock Text="Last update"
                                           Foreground="#94A3B8"
                                           FontSize="12"/>
                                <TextBlock Text="{Binding LastQuoteUpdateText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           Foreground="#E5E7EB"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Margin="0,4,0,0"/>
                                <TextBlock Text="{Binding QuoteSourceText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           Foreground="#94A3B8"
                                           FontSize="12"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="4"
                                Background="#0B1220"
                                BorderBrush="#24314E"
                                BorderThickness="1"
                                CornerRadius="14"
                                Padding="12">
                            <StackPanel>
                                <TextBlock Text="Volume trend"
                                           Foreground="#94A3B8"
                                           FontSize="12"/>
                                <TextBlock Text="{Binding VolumeTrendText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           Foreground="#E5E7EB"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Margin="0,4,0,0"/>
                                <TextBlock Text="Today vs yesterday"
                                           Foreground="#94A3B8"
                                           FontSize="12"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Border Grid.Row="4"
                            Background="#0B1220"
                            BorderBrush="#24314E"
                            BorderThickness="1"
                            CornerRadius="14"
                            Padding="12">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Market stats"
                                           Foreground="#E5E7EB"
                                           FontWeight="SemiBold"
                                           FontSize="14"/>

                                <Button Grid.Column="1"
                                        Padding="12,8"
                                        Background="#111B35"
                                        Style="{StaticResource GhostButton}"
                                        BorderBrush="#24314E"
                                        BorderThickness="1"
                                        Foreground="#E5E7EB"
                                        Cursor="Hand"
                                        Click="CopyAddress_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ContentCopy" Width="16" Height="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Copy"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="3"
                                        Padding="12,8"
                                        Style="{StaticResource GhostButton}"
                                        Background="#111B35"
                                        BorderBrush="#24314E"
                                        BorderThickness="1"
                                        Foreground="#E5E7EB"
                                        Cursor="Hand"
                                        Click="OpenExplorer_Click">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="OpenInNew" Width="16" Height="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Explorer"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Trades (last 15m)" Foreground="#94A3B8" FontSize="12"/>
                                    <TextBlock Text="{Binding Trades15mText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               Foreground="#E5E7EB" FontSize="15" FontWeight="SemiBold" Margin="0,3,0,10"/>

                                    <TextBlock Text="Buy / Sell" Foreground="#94A3B8" FontSize="12"/>
                                    <TextBlock Text="{Binding BuySellText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               Foreground="#E5E7EB" FontSize="15" FontWeight="SemiBold" Margin="0,3,0,10"/>

                                    <TextBlock Text="Verified pairs" Foreground="#94A3B8" FontSize="12"/>
                                    <TextBlock Text="{Binding VerifiedPctText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               Foreground="#E5E7EB" FontSize="15" FontWeight="SemiBold" Margin="0,3,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="VWAP (last 15m)" Foreground="#94A3B8" FontSize="12"/>
                                    <TextBlock Text="{Binding VwapText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               Foreground="#E5E7EB" FontSize="15" FontWeight="SemiBold" Margin="0,3,0,10"/>

                                    <TextBlock Text="Min / Max (last 15m)" Foreground="#94A3B8" FontSize="12"/>
                                    <TextBlock Text="{Binding MinMaxText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               Foreground="#E5E7EB" FontSize="15" FontWeight="SemiBold" Margin="0,3,0,10"/>

                                    <TextBlock Text="Top source" Foreground="#94A3B8" FontSize="12"/>
                                    <TextBlock Text="{Binding TopSourceText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               Foreground="#E5E7EB" FontSize="15" FontWeight="SemiBold" Margin="0,3,0,0"/>
                                </StackPanel>
                            </Grid>

                            <Grid Grid.Row="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                </Grid>
                            </Grid>

                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Row="2"
                    Grid.ColumnSpan="3"
                    Background="#0F1B33"
                    BorderBrush="#1E2A46"
                    MaxHeight="500"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="12">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Last trades"
                                       Foreground="#E5E7EB"
                                       FontWeight="SemiBold"
                                       FontSize="16"/>

                            <TextBlock Margin="10,0,0,0"
                                       Foreground="#94A3B8"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       Text="{Binding LastTradesStatus, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                        </StackPanel>

                        <ComboBox Grid.Column="1"
                                  Width="120"
                                  Style="{StaticResource DarkComboBox}"
                                  ItemsSource="{Binding RefreshPeriods, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                  SelectedItem="{Binding SelectedRefreshPeriod, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"/>

                        <ToggleButton Grid.Column="3"
                                      Width="120"
                                      Height="34"
                                      Background="#0B1220"
                                      BorderBrush="#24314E"
                                      BorderThickness="1"
                                      Foreground="#E5E7EB"
                                      Cursor="Hand"
                                      IsChecked="{Binding IsAutoRefreshTradesEnabled, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border x:Name="bd"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="12"
                                            Padding="12,0">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="Auto" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BoolToAutoTextConverter}}"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bd" Property="Background" Value="#111B35"/>
                                            <Setter TargetName="bd" Property="BorderBrush" Value="#2D64E3"/>
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="bd" Property="Background" Value="#14254A"/>
                                            <Setter TargetName="bd" Property="BorderBrush" Value="#2D64E3"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="bd" Property="Opacity" Value="0.45"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>

                        <ToggleButton Grid.Column="5"
                                      Width="140"
                                      Height="34"
                                      Background="#0B1220"
                                      BorderBrush="#24314E"
                                      BorderThickness="1"
                                      Foreground="#E5E7EB"
                                      Cursor="Hand"
                                      IsChecked="{Binding IsVerifiedOnly, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border x:Name="bd"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="12"
                                            Padding="12,0">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <materialDesign:PackIcon Kind="ShieldCheck" Width="16" Height="16" Margin="0,0,8,0"/>
                                            <TextBlock Text="Verified only" FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bd" Property="Background" Value="#111B35"/>
                                            <Setter TargetName="bd" Property="BorderBrush" Value="#2D64E3"/>
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="bd" Property="Background" Value="#14254A"/>
                                            <Setter TargetName="bd" Property="BorderBrush" Value="#2D64E3"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="bd" Property="Opacity" Value="0.45"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>

                        <ComboBox Grid.Column="7"
                                  Width="170"
                                  Style="{StaticResource DarkComboBox}"
                                  ItemsSource="{Binding TradeSources, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                  SelectedItem="{Binding SelectedTradeSource, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"/>

                        <Button Grid.Column="9"
                                Padding="14,8"
                                Style="{StaticResource GhostButton}"
                                Background="#0B1220"
                                BorderBrush="#24314E"
                                BorderThickness="1"
                                Foreground="#E5E7EB"
                                Cursor="Hand"
                                Click="RefreshLastTrades_Click"
                                IsEnabled="{Binding IsLastTradesLoading, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InvBool}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Refresh"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <ProgressBar Width="160" Height="6"
                                     HorizontalAlignment="Center"
                                     Foreground="#1D4ED8"
                                     Background="White"
                                     BorderBrush="White"
                                     IsIndeterminate="True"
                                     Visibility="{Binding IsLastTradesLoading, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Margin="12,0,0,0"
                                   Foreground="#FCA5A5"
                                   Text="{Binding LastTradesErrorText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   Visibility="{Binding LastTradesErrorVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="4"
                              ItemsSource="{Binding LastTrades, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              GridLinesVisibility="None"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              Background="#0B1220"
                              BorderThickness="0"
                              RowBackground="#0B1220"
                              AlternatingRowBackground="#0E1930"
                              Foreground="#E5E7EB"
                              MinHeight="220"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding Time, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" Width="200"/>
                            <DataGridTextColumn Header="Pair" Binding="{Binding Pair}" Width="180"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat={}{0:N8}}" Width="*"/>
                            <DataGridTextColumn Header="Volume" Binding="{Binding AbsVolume, StringFormat={}{0:N6}}" Width="*"/>
                            <DataGridTextColumn Header="USD est." Binding="{Binding EstimatedUSDPrice, StringFormat={}{0:N2}}" Width="120"/>
                            <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="220"/>
                            <DataGridCheckBoxColumn Header="Verified" Binding="{Binding VerifiedPair}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>

                </Grid>
            </Border>

        </Grid>
    </Grid>
</UserControl>
