<UserControl x:Class="DIAdataDesktop.Views.Controls.QuotedAssetDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DIAdataDesktop.Views.Controls"
             xmlns:converters="clr-namespace:DIAdataDesktop.Converters"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#0F1B33"
                BorderBrush="#1E2A46"
                BorderThickness="1"
                CornerRadius="16"
                Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Width="42" Height="42"
                        Background="#0B1220"
                        BorderBrush="#24314E"
                        BorderThickness="1"
                        Cursor="Hand"
                        Click="Back_Click">
                    <TextBlock Text="←" Foreground="#E5E7EB" FontSize="18"
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding Name}" Foreground="#E5E7EB"
                               FontSize="22" FontWeight="SemiBold"/>

                    <Border Margin="10,0,0,0" Padding="10,3"
                            CornerRadius="8" Background="#0B1220"
                            BorderBrush="#24314E" BorderThickness="1">
                        <TextBlock Text="{Binding Symbol}" Foreground="#E5E7EB" FontWeight="SemiBold"/>
                    </Border>

                    <Border Margin="10,0,0,0" Padding="12,4"
                            CornerRadius="10" Background="#1D4ED8"
                            BorderBrush="#2D64E3" BorderThickness="1">
                        <TextBlock Text="{Binding Price, StringFormat=$ {0:N2}}"
                                   Foreground="White" FontWeight="SemiBold" FontSize="16"/>
                    </Border>
                </StackPanel>

                <Button Grid.Column="3"
                        Padding="14,8"
                        Background="#0B1220"
                        BorderBrush="#24314E"
                        BorderThickness="1"
                        Foreground="#E5E7EB"
                        Cursor="Hand"
                        Click="Refresh_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Body -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left -->
            <Border Grid.Column="0"
                    Background="#0F1B33"
                    BorderBrush="#1E2A46"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="14">
                <StackPanel>
                    <TextBlock Text="General information" Foreground="#E5E7EB" FontWeight="SemiBold" FontSize="16"/>

                    <TextBlock Margin="0,14,0,2" Foreground="#94A3B8" Text="Contract address"/>
                    <TextBlock Foreground="#E5E7EB" Text="{Binding Address}" TextWrapping="Wrap"/>

                    <TextBlock Margin="0,14,0,2" Foreground="#94A3B8" Text="Network"/>
                    <TextBlock Foreground="#E5E7EB" Text="{Binding Blockchain}"/>

           
                    <TextBlock Margin="0,14,0,2" Foreground="#94A3B8" Text="24h Volume (USD)"/>
                    <TextBlock Foreground="#E5E7EB" Text="{Binding Volume, StringFormat=$ {0:N0}}"/>

                    <TextBlock Margin="0,14,0,2" Foreground="#94A3B8" Text="Volume yesterday (USD)"/>
                    <TextBlock Foreground="#E5E7EB" Text="{Binding Quotation.VolumeYesterdayUSD, StringFormat=$ {0:N0}}"/>

                    <TextBlock Margin="0,14,0,2" Foreground="#94A3B8" Text="Source"/>
                    <TextBlock Foreground="#E5E7EB" Text="{Binding Quotation.Source}"/>

                    <TextBlock Margin="0,14,0,2" Foreground="#94A3B8" Text="Signature"/>
                    <TextBlock Foreground="#E5E7EB" Text="{Binding Exchange.Signature}"/>

                    <Border Margin="0,18,0,0"
                            Background="#2B0F12"
                            BorderBrush="#6B1F26"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="10"
                            Visibility="{Binding ErrorVisibility}">
                        <TextBlock Text="{Binding ErrorText}" Foreground="#FCA5A5" TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Right -->
            <Border Grid.Column="2"
                    Background="#0F1B33"
                    BorderBrush="#1E2A46"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="14">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Sources" Foreground="#E5E7EB" FontWeight="SemiBold" FontSize="16"/>

                    <Grid Grid.Row="2" Margin="0,6,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="70"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Sources" Foreground="#94A3B8" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" Text="Volume 24h" Foreground="#94A3B8" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="2" Text="Trades 24h" Foreground="#94A3B8" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                        <TextBlock Grid.Column="3" Text="Pairs" Foreground="#94A3B8" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                    </Grid>

                    <ListView Grid.Row="3"
          Margin="0,8,0,0"
          ItemsSource="{Binding CexPairs}"
          Background="Transparent"
          BorderThickness="0"
          ScrollViewer.VerticalScrollBarVisibility="Auto">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,10"
                    Background="#0B1220"
                    BorderBrush="#24314E"
                    BorderThickness="1"
                    CornerRadius="12">

                                    <Expander Background="Transparent"
                          BorderThickness="0"
                          Foreground="#E5E7EB">

                                        <!-- Exchange Row -->
                                        <Expander.Header>
                                            <Grid Height="44" Margin="12,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="150"/>
                                                    <ColumnDefinition Width="130"/>
                                                    <ColumnDefinition Width="70"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0"
                                       Text="{Binding Exchange}"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       Foreground="#E5E7EB"/>

                                                <TextBlock Grid.Column="1"
                                       Text="{Binding Volume24h, StringFormat=$ {0:N0}}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Foreground="#E5E7EB"/>

                                                <TextBlock Grid.Column="2"
                                       Text="{Binding Trades24h, StringFormat={}{0:N0}}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Foreground="#E5E7EB"/>

                                                <TextBlock Grid.Column="3"
                                       Text="{Binding PairsCount}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"
                                       Foreground="#E5E7EB"/>
                                            </Grid>
                                        </Expander.Header>

                                        <!-- Pairs Table -->
                                        <Border Background="#111B35"
                            BorderBrush="#24314E"
                            BorderThickness="1,1,1,0"
                            CornerRadius="0,0,12,12"
                            Padding="12">

                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="8"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="150"/>
                                                        <ColumnDefinition Width="130"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="Pairs" Foreground="#94A3B8" FontWeight="SemiBold"/>
                                                    <TextBlock Grid.Column="1" Text="Volume 24h" Foreground="#94A3B8" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                                    <TextBlock Grid.Column="2" Text="Trades 24h" Foreground="#94A3B8" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                                </Grid>

                                                <ItemsControl Grid.Row="2" ItemsSource="{Binding Pairs}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="0,6,0,6">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="150"/>
                                                                    <ColumnDefinition Width="130"/>
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Grid.Column="0"
                                                       Text="{Binding Symbol}"
                                                       Foreground="#E5E7EB"
                                                       FontWeight="SemiBold"/>

                                                                <TextBlock Grid.Column="1"
                                                       Text="{Binding Volume24h, StringFormat=$ {0:N0}}"
                                                       Foreground="#E5E7EB"
                                                       HorizontalAlignment="Right"/>

                                                                <TextBlock Grid.Column="2"
                                                       Text="{Binding Trades24h, StringFormat={}{0:N0}}"
                                                       Foreground="#E5E7EB"
                                                       HorizontalAlignment="Right"/>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                            </Grid>
                                        </Border>

                                    </Expander>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
