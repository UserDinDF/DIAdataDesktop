<UserControl x:Class="DIAdataDesktop.Views.Controls.ExchangesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:svg="http://sharpvectors.codeplex.com/runtime/"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="CardButton" TargetType="Border">
            <Setter Property="Background" Value="#111B35"/>
            <Setter Property="BorderBrush" Value="#1E2A46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="16"/>
        </Style>

        <Style x:Key="CardListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,16,16"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MutedLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="ChipBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="Background" Value="#0B1220"/>
            <Setter Property="BorderBrush" Value="#24314E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,3"/>
        </Style>

    </UserControl.Resources>

    <Grid PreviewMouseWheel="BubbleMouseWheelToParent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Exchanges" Foreground="#E5E7EB" FontSize="22" FontWeight="SemiBold"/>
                <TextBlock Margin="8,0,0,0"
                           Text="{Binding PagedRows.Count, Mode=OneWay, StringFormat= ({0} shown)}"
                           Foreground="#64748B" FontSize="22" FontWeight="SemiBold"/>
                <TextBlock Margin="10,0,0,0"
                           Text="{Binding TotalCount, StringFormat= / {0} total}"
                           Foreground="#475569" FontSize="22" FontWeight="SemiBold"/>
            </StackPanel>

            <TextBlock Text="{Binding StatusText}" Foreground="#94A3B8" Margin="0,3,0,0"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center">
                <Button Content="⟪" Command="{Binding GoToFirstCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,6,0"/>
                <Button Content="‹ Prev" Command="{Binding PrevPageCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>

                <TextBlock Foreground="#94A3B8" VerticalAlignment="Center"
                           Text="{Binding CurrentPage, StringFormat=Page {0}}"/>
                <TextBlock Foreground="#94A3B8" VerticalAlignment="Center" Text=" / "/>
                <TextBlock Foreground="#94A3B8" VerticalAlignment="Center"
                           Text="{Binding TotalPages}"/>

                <Button Content="Next ›" Command="{Binding NextPageCommand}" Style="{StaticResource PrimaryButton}" Margin="10,0,6,0"/>
                <Button Content="⟫" Command="{Binding GoToLastCommand}" Style="{StaticResource PrimaryButton}"/>

                <TextBlock Foreground="#64748B" Margin="18,0,6,0" VerticalAlignment="Center" Text="Page size"/>
                <ComboBox Style="{StaticResource DarkComboBox}"
                          Width="Auto"
                          ItemsSource="{Binding PageSizes}"
                          SelectedItem="{Binding PageSize, Mode=TwoWay}"
                          Margin="0,0,16,0"/>

                <TextBlock Foreground="#64748B" Margin="0,0,6,0" VerticalAlignment="Center" Text="Search"/>
                <TextBox Width="260"
                         Background="#0B1220"
                         Foreground="#E5E7EB"
                         BorderBrush="#24314E"
                         BorderThickness="1"
                         Padding="10,7"
                         Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                <Button Margin="12,0,0,0"
                        Padding="14,8"
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource GhostButton}"
                        Background="#1D4ED8"
                        Foreground="White"
                        BorderBrush="#2D64E3"
                        BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>

        <ListBox Grid.Row="2"
                 ItemsSource="{Binding PagedRows}"
                 Background="Transparent"
                 BorderThickness="0"
                 ItemContainerStyle="{StaticResource CardListBoxItemStyle}"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 VirtualizingPanel.IsVirtualizing="True"
                 VirtualizingPanel.VirtualizationMode="Recycling">

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Width="340" Height="190"
                            CornerRadius="16"
                            Background="#111B35"
                            BorderBrush="#1E2A46"
                            BorderThickness="1"
                            Padding="16">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="16"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Row="0" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Image Width="26"
                                           Loaded="SvgLogo_Loaded"
                                           Stretch="Uniform"/>

                                    <TextBlock Text="{Binding Name}"
                                               Margin="10,0,0,0"
                                               Foreground="#E5E7EB"
                                               FontSize="22"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <Button Style="{StaticResource StarIconButton}" Grid.Column="1"
                                        Margin="0,0,0,0"
                                        Click="FavoriteBtn_Click"
                                        Tag="{Binding}">
                                    <materialDesign:PackIcon Width="16" Height="16">
                                        <materialDesign:PackIcon.Style>
                                            <Style TargetType="materialDesign:PackIcon">
                                                <Setter Property="Kind" Value="StarOutline"/>
                                                <Setter Property="Foreground" Value="#64748B"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                        <Setter Property="Kind" Value="Star"/>
                                                        <Setter Property="Foreground" Value="#FBBF24"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </materialDesign:PackIcon.Style>
                                    </materialDesign:PackIcon>
                                </Button>
                                
                                <Button Grid.Column="2"
                                        Style="{StaticResource StarIconButton}"
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Center"
                                        Click="OpenExchangeSource_Click"
                                        Tag="{Binding}">
                                    <materialDesign:PackIcon Kind="OpenInNew" Width="16" Height="16" Foreground="#64748B"/>
                                </Button>
                            </Grid>

                            <StackPanel Grid.Row="2" Grid.Column="0">
                                <TextBlock Text="Trades 24h" Foreground="#94A3B8" FontSize="12" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Trades, StringFormat={}{0:N0}}"
                                           Foreground="#E5E7EB"
                                           FontSize="22"
                                           FontWeight="SemiBold"
                                           Margin="0,6,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,12,0,0">
                                <TextBlock Text="Volume 24h (USD)" Foreground="#94A3B8" FontSize="12" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Volume24h, StringFormat=$ {0:N0}}"
                                           Foreground="#E5E7EB"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Margin="0,6,0,0"/>
                            </StackPanel>

                            <Grid Grid.Row="4" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Type" Foreground="#94A3B8" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Type}"
                                               Foreground="#E5E7EB"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Margin="0,6,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Network" Foreground="#94A3B8" FontSize="12" FontWeight="SemiBold"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                        <Border Width="18" Height="18"
                                                CornerRadius="9"
                                                Background="#0B1220"
                                                BorderBrush="#24314E"
                                                BorderThickness="1"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="⟠"
                                                       Foreground="#E5E7EB"
                                                       FontSize="12"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <TextBlock Text="{Binding Blockchain}"
                                                   Foreground="#E5E7EB"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Margin="8,0,0,0"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Pairs" Foreground="#94A3B8" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Pairs, StringFormat={}{0:N0}}"
                                               Foreground="#E5E7EB"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Margin="0,6,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
