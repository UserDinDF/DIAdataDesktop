<UserControl x:Class="DIAdataDesktop.Views.Controls.QuotedAssetsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Style="{StaticResource CardBorder}"
            Background="#0F1B33"
            BorderBrush="#1E2A46"
            BorderThickness="1"
            CornerRadius="16"
            Padding="14">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Quoted Assets"
                               Foreground="#E5E7EB"
                               FontSize="16"
                               FontWeight="SemiBold"/>
                    <TextBlock Foreground="#9CA3AF"
                               Text="{Binding QuotedAssetsCount, StringFormat=Showing: {0}}"/>
                </StackPanel>

                <!-- Blockchain filter -->
                <ComboBox Grid.Column="1"
                          Background="#0B1220"
                          Foreground="#E5E7EB"
                          BorderBrush="#24314E"
                          BorderThickness="1"
                          Padding="10,6"
                          ItemsSource="{Binding Blockchains}"
                          SelectedItem="{Binding SelectedBlockchain, Mode=TwoWay}"/>

                <!-- Search -->
                <TextBox Grid.Column="3"
                         Background="#0B1220"
                         Foreground="#E5E7EB"
                         BorderBrush="#24314E"
                         BorderThickness="1"
                         Padding="10,6"
                         Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Search (symbol / name / address)"
                         materialDesign:HintAssist.Foreground="#6B7280"/>

                <Button Grid.Column="5"
                        Style="{StaticResource PrimaryButton}"
                        Content="Load"
                        Padding="14,8"
                        Command="{Binding LoadQuotedAssetsCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InvBool}}"/>
            </Grid>

            <!-- META: Blockchains + Exchanges -->
            <Border Grid.Row="2"
                    Background="#0B1220"
                    BorderBrush="#24314E"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="12">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Blockchains -->
                    <StackPanel>
                        <TextBlock Text="Blockchains"
                                   Foreground="#E5E7EB"
                                   FontWeight="SemiBold"/>

                        <TextBox Margin="0,8,0,8"
                                 Background="#0F1B33"
                                 Foreground="#E5E7EB"
                                 BorderBrush="#24314E"
                                 BorderThickness="1"
                                 Padding="10,6"
                                 Text="{Binding BlockchainSearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Search blockchains"
                                 materialDesign:HintAssist.Foreground="#6B7280"/>

                        <ListBox ItemsSource="{Binding BlockchainsView}"
                                 Height="160"
                                 Background="#0F1B33"
                                 BorderBrush="#24314E"
                                 BorderThickness="1"
                                 Padding="6"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="Margin" Value="0,0,0,8"/>
                                    <Setter Property="Background" Value="#0B1220"/>
                                    <Setter Property="BorderBrush" Value="#24314E"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="Foreground" Value="#E5E7EB"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </StackPanel>

                    <!-- Exchanges (DIA cards) -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Exchanges"
                                   Foreground="#E5E7EB"
                                   FontWeight="SemiBold"/>

                        <TextBox Margin="0,8,0,8"
                                 Background="#0F1B33"
                                 Foreground="#E5E7EB"
                                 BorderBrush="#24314E"
                                 BorderThickness="1"
                                 Padding="10,6"
                                 Text="{Binding ExchangeSearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Search exchanges"
                                 materialDesign:HintAssist.Foreground="#6B7280"/>

                        <ListBox ItemsSource="{Binding ExchangesView}"
                                 Height="220"
                                 Background="#0F1B33"
                                 BorderBrush="#24314E"
                                 BorderThickness="1"
                                 Padding="8"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">

                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0,0,0,10"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="16"
                                            Background="#0B1220"
                                            BorderBrush="#24314E"
                                            BorderThickness="1"
                                            Padding="12">

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- LEFT -->
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}"
                                                               Foreground="#E5E7EB"
                                                               FontWeight="SemiBold"
                                                               FontSize="14"/>

                                                    <!-- Type chip -->
                                                    <Border Margin="10,0,0,0"
                                                            Padding="8,2"
                                                            CornerRadius="999"
                                                            Background="#0F234A"
                                                            BorderBrush="#26406F"
                                                            BorderThickness="1">
                                                        <TextBlock Text="{Binding Type}"
                                                                   Foreground="#B6D4FF"
                                                                   FontSize="11"
                                                                   FontWeight="SemiBold"/>
                                                    </Border>

                                                    <!-- Active chip -->
                                                    <Border Margin="6,0,0,0"
                                                            Padding="8,2"
                                                            CornerRadius="999"
                                                            BorderThickness="1">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#2B0F12"/>
                                                                <Setter Property="BorderBrush" Value="#6B1F26"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ScraperActive}" Value="True">
                                                                        <Setter Property="Background" Value="#0F2B1C"/>
                                                                        <Setter Property="BorderBrush" Value="#1F6B42"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>

                                                        <TextBlock FontSize="11" FontWeight="SemiBold">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Foreground" Value="#FCA5A5"/>
                                                                    <Setter Property="Text" Value="Inactive"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding ScraperActive}" Value="True">
                                                                            <Setter Property="Foreground" Value="#86EFAC"/>
                                                                            <Setter Property="Text" Value="Active"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Border>
                                                </StackPanel>

                                                <TextBlock Foreground="#9CA3AF"
                                                           FontSize="11"
                                                           Margin="0,6,0,0"
                                                           TextTrimming="CharacterEllipsis">
                                                    <Run Text="Network: "/>
                                                    <Run Text="{Binding Blockchain}"/>
                                                    <Run Text="   •   Pairs: "/>
                                                    <Run Text="{Binding Pairs}"/>
                                                    <Run Text="   •   Trades: "/>
                                                    <Run Text="{Binding Trades}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- RIGHT -->
                                            <StackPanel Grid.Column="1"
                                                        HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding Volume24h, StringFormat={}{0:N0}}"
                                                           Foreground="#E5E7EB"
                                                           FontWeight="SemiBold"
                                                           HorizontalAlignment="Right"/>
                                                <TextBlock Text="Volume 24h"
                                                           Foreground="#9CA3AF"
                                                           FontSize="10"
                                                           HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- GRID -->
            <Grid Grid.Row="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Status + Busy -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding StatusText}"
                               Foreground="#9CA3AF"
                               VerticalAlignment="Center"/>

                    <Border Grid.Column="1"
                            Padding="10,6"
                            CornerRadius="999"
                            Background="#0F234A"
                            BorderBrush="#26406F"
                            BorderThickness="1"
                            Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}"
                            VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <ProgressBar Width="52" Height="8" IsIndeterminate="True"/>
                            <TextBlock Text=" Loading…"
                                       Foreground="#B6D4FF"
                                       Margin="8,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- DataGrid (dark) -->
                <DataGrid Grid.Row="2"
                          ItemsSource="{Binding QuotedAssetsView}"
                          Background="#0B1220"
                          Foreground="#E5E7EB"
                          BorderBrush="#24314E"
                          BorderThickness="1"
                          RowBackground="#0B1220"
                          AlternatingRowBackground="#0F1B33"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          RowHeaderWidth="0"
                          SelectionMode="Extended"
                          SelectionUnit="FullRow">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#0F1B33"/>
                            <Setter Property="Foreground" Value="#9CA3AF"/>
                            <Setter Property="BorderBrush" Value="#24314E"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="10,8"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="10,8"/>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#16233C"/>
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Symbol" Binding="{Binding Asset.Symbol}" Width="90"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Asset.Name}" Width="*"/>
                        <DataGridTextColumn Header="Blockchain" Binding="{Binding Asset.Blockchain}" Width="140"/>
                        <DataGridTextColumn Header="Decimals" Binding="{Binding Asset.Decimals}" Width="90"/>
                        <DataGridTextColumn Header="Volume" Binding="{Binding Volume, StringFormat={}{0:N4}}" Width="140"/>
                        <DataGridTextColumn Header="Volume USD" Binding="{Binding VolumeUSD, StringFormat={}{0:N2}}" Width="140"/>
                        <DataGridTextColumn Header="Address" Binding="{Binding Asset.Address}" Width="360"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
