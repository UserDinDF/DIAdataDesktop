<UserControl x:Class="DIAdataDesktop.Views.Controls.QuotedAssetsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             Background="Transparent">

    <UserControl.Resources>
        <Style x:Key="TokenCardButton" TargetType="Button">
            <Setter Property="Background" Value="#111B35"/>
            <Setter Property="BorderBrush" Value="#1E2A46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16"
                                SnapsToDevicePixels="True">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="BorderBrush" Value="#2D64E3"/>
                                <Setter TargetName="bd" Property="Background" Value="#141F3E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.99" ScaleY="0.99"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="bd" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PillBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="999"/>
            <Setter Property="Background" Value="#0B1220"/>
            <Setter Property="BorderBrush" Value="#24314E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,2"/>
        </Style>

        <Style x:Key="MutedLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,12,0,2"/>
        </Style>

        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="CardListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,16,16"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="14"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Explore Tokens" Foreground="#E5E7EB" FontSize="22" FontWeight="SemiBold"/>
                    <TextBlock Margin="5,0,0,0" Text="{Binding FilteredCount, StringFormat=  ({0} shown)}"
                               Foreground="#64748B" FontSize="22" FontWeight="SemiBold"/>
                    <TextBlock Margin="10,0,0,0" Text="{Binding TotalCount, StringFormat=  / {0} total}"
                               Foreground="#475569" FontSize="22" FontWeight="SemiBold"/>

                </StackPanel>

                <TextBlock Text="{Binding StatusText}" Foreground="#94A3B8" Margin="0,3,0,0"/>

                <!-- Paging bar -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center">
                    <Button Content="⟪" Command="{Binding GoToFirstCommand}" Style="{StaticResource PrimaryButton}" Margin="0,0,6,0"/>
                    <Button Content="‹ Prev" Style="{StaticResource PrimaryButton}" Command="{Binding PrevPageCommand}" Margin="0,0,10,0"/>

                    <TextBlock Foreground="#94A3B8" VerticalAlignment="Center"
                               Text="{Binding CurrentPage, StringFormat=Page {0}}"/>
                    <TextBlock Foreground="#94A3B8" VerticalAlignment="Center" Text=" / "/>
                    <TextBlock Foreground="#94A3B8" VerticalAlignment="Center"
                               Text="{Binding TotalPages}"/>

                    <Button Content="Next ›" Style="{StaticResource PrimaryButton}" Command="{Binding NextPageCommand}" Margin="10,0,6,0"/>
                    <Button Content="⟫" Command="{Binding GoToLastCommand}" Style="{StaticResource PrimaryButton}"/>

                    <TextBlock Foreground="#64748B" Margin="18,0,6,0" VerticalAlignment="Center" Text="Page size"/>
                    <ComboBox Style="{StaticResource DarkComboBox}"
              Width="auto"
              ItemsSource="{Binding PageSizes}"
              SelectedItem="{Binding PageSize, Mode=TwoWay}"
              Margin="0,0,16,0"/>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center">
                        <TextBlock Foreground="#64748B" VerticalAlignment="Center" Text="Blockchain" Margin="0,0,8,0"/>
                        <ComboBox Style="{StaticResource DarkComboBox}"
              Width="auto"
              ItemsSource="{Binding Blockchains}"
              SelectedItem="{Binding SelectedBlockchain, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- ✅ Page items only -->
        <ListBox Grid.Row="2"
                 ItemsSource="{Binding PagedRows}"
                 Background="Transparent"
                 BorderThickness="0"
                 ItemContainerStyle="{StaticResource CardListBoxItemStyle}"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.CanContentScroll="True"
                 VirtualizingPanel.IsVirtualizing="True"
                 VirtualizingPanel.VirtualizationMode="Recycling">

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Style="{StaticResource TokenCardButton}"
                            Width="360" Height="250"
                            Click="TokenCard_Click">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Top -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="42"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="42" Height="42" CornerRadius="14"
        Background="#0B1220" BorderBrush="#24314E" BorderThickness="1"
        ClipToBounds="True">

                                    <Grid>
                                        <Image Stretch="UniformToFill"
               Source="{Binding IconUrl}"
               ImageFailed="Image_ImageFailed"/>
                                    </Grid>
                                </Border>


                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" Foreground="#E5E7EB"
                                               FontSize="18" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Symbol}" Foreground="#94A3B8" Margin="0,2,0,0"/>
                                </StackPanel>

                                <StackPanel  Grid.Column="3" Orientation="Horizontal">
                                    <Button Style="{StaticResource StarIconButton}"
                                            Margin="0,-15,6,0"
                                            Click="FavoriteBtn_Click"
                                            Tag="{Binding}">
                                        <materialDesign:PackIcon Width="16" Height="16">
                                            <materialDesign:PackIcon.Style>
                                                <Style TargetType="materialDesign:PackIcon">
                                                    <Setter Property="Kind" Value="StarOutline"/>
                                                    <Setter Property="Foreground" Value="#64748B"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                            <Setter Property="Kind" Value="Star"/>
                                                            <Setter Property="Foreground" Value="#FBBF24"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </materialDesign:PackIcon.Style>
                                        </materialDesign:PackIcon>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignRaisedSecondaryDarkButton}" Padding="0" BorderBrush="Transparent" Height="16" VerticalAlignment="Center" Background="Transparent" Margin="2,-18,8,0" x:Name="openInWindowBtn" Click="openInWindowBtn_Click">
                                        <materialDesign:PackIcon Kind="OpenInNew" Width="16" Height="16" Foreground="#64748B"/>
                                    </Button>
                                    <Border Grid.Column="3" BorderBrush="White" BorderThickness="1" CornerRadius="5" VerticalAlignment="Top">
                                        <TextBlock Text="{Binding Symbol}" FontFamily="Arial" Padding="3" Background="White" Foreground="Black" FontSize="12" FontWeight="SemiBold"/>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <Grid Grid.Row="1" Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Style="{StaticResource MutedLabel}" Text="Asset price"/>
                                    <TextBlock Style="{StaticResource ValueText}"
                                               Text="{Binding Price, StringFormat=$ {0:N2}}"/>

                                    <TextBlock Style="{StaticResource MutedLabel}" Text="Volume 24h (USD)"/>
                                    <TextBlock Style="{StaticResource ValueText}"
                                               Text="{Binding Quotation.VolumeYesterdayUSD, StringFormat=$ {0:N0}}"/>

                                    <TextBlock Style="{StaticResource MutedLabel}" Text="Sources"/>
                                    <TextBlock Style="{StaticResource ValueText}" Text="{Binding CexExchangesCount, Mode=OneWay}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Style="{StaticResource MutedLabel}" Text="Network"/>
                                    <Border CornerRadius="10" Background="#0B1220" BorderBrush="#24314E" BorderThickness="1" Padding="8,4" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Blockchain}" Foreground="#E5E7EB" FontWeight="SemiBold"/>
                                    </Border>

                                    <TextBlock Style="{StaticResource MutedLabel}" Text="Updated"/>
                                    <TextBlock Foreground="#94A3B8"
                                               Text="{Binding Time, StringFormat={}{0:HH:mm:ss}}"/>

                                    <TextBlock Style="{StaticResource MutedLabel}" Text="Preis Yesterday"/>
                                    <TextBlock Style="{StaticResource ValueText}" Text="{Binding Quotation.PriceYesterday, StringFormat=$ {0:N2}}"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
