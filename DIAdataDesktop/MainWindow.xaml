<Window x:Class="DIAdataDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:DIAdataDesktop.ViewModels"
        xmlns:controls="clr-namespace:DIAdataDesktop.Views.Controls"
        xmlns:conv="clr-namespace:DIAdataDesktop.Converters"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="DIAdata Desktop" Height="780" Width="1180"
        WindowStartupLocation="CenterScreen"
        Background="#F6F7FB">

    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>

        <!-- Converters -->
        <conv:InverseBooleanConverter x:Key="InvBool"/>
        <conv:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:StringToVisibilityConverter x:Key="StringToVis"/>
        <conv:StringEqualsToBoolConverter x:Key="StringEqualsToBool"/>
    </Window.Resources>

    <Grid Margin="18">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="14"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: Navigation / Status / Meta -->
        <Border Grid.Column="0" Style="{StaticResource CardBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="DIAdata Desktop" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="Live quotation + quoted assets + meta lists" Opacity="0.65" Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Auto Refresh -->
                <Border Grid.Row="2" Background="#FAFAFF" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="14" Padding="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Auto Update" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding AutoRefreshStatusText}" Opacity="0.7" Margin="0,2,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <CheckBox Content="On"
                                      IsChecked="{Binding IsAutoRefreshEnabled, Mode=TwoWay}"
                                      Margin="0,0,10,0"/>
                            <ComboBox Width="140"
                                      ItemsSource="{Binding AutoRefreshIntervals}"
                                      SelectedItem="{Binding SelectedAutoRefreshInterval, Mode=TwoWay}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Watchlist -->
                <Border Grid.Row="4" Background="White" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="14" Padding="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="Watchlist" FontWeight="SemiBold"/>
                                <TextBlock Text="Double-click → load quotation" Opacity="0.65"/>
                            </StackPanel>

                            <Button Grid.Column="1"
                                    Style="{StaticResource GhostButton}"
                                    Content="Add current"
                                    Command="{Binding Quotation.AddToWatchlistCommand}"
                                    Padding="10,8"/>
                        </Grid>

                        <!-- Quick search in watchlist -->
                        <TextBox Grid.Row="2"
                                 Text="{Binding WatchlistSearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Search watchlist (e.g. BTC, ETH)"/>

                        <ListBox Grid.Row="4"
                                 x:Name="WatchListBox"
                                 ItemsSource="{Binding WatchlistView}"
                                 SelectedItem="{Binding Quotation.Symbol, Mode=TwoWay}"
                                 BorderBrush="#E5E7EB"
                                 BorderThickness="1"
                                 Padding="6"
                                 Background="#FBFBFD">

                            <ListBox.InputBindings>
                                <MouseBinding MouseAction="LeftDoubleClick"
                                              Command="{Binding Quotation.PickCommand}"
                                              CommandParameter="{Binding SelectedItem, ElementName=WatchListBox}"/>
                            </ListBox.InputBindings>

                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="10,8"/>
                                    <Setter Property="Margin" Value="0,0,0,6"/>
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#E5E7EB"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </Grid>
                </Border>

                <!-- Footer actions -->
                <StackPanel Grid.Row="6">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Border Style="{StaticResource Chip}">
                            <TextBlock Text="{Binding StatusChipText}"/>
                        </Border>
                        <Border Style="{StaticResource Chip}" Margin="8,0,0,0">
                            <TextBlock Text="{Binding LastUpdateChipText}"/>
                        </Border>
                    </StackPanel>

                    <Button Style="{StaticResource PrimaryButton}"
                            Content="Manual Update (Refresh all)"
                            Command="{Binding RefreshAllCommand}"
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InvBool}}"/>

                    <Button Margin="0,8,0,0"
                            Style="{StaticResource GhostButton}"
                            Content="Reload Meta (Blockchains / Exchanges)"
                            Command="{Binding LoadMetaCommand}"
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InvBool}}"/>

                    <Border Margin="0,12,0,0"
                            Background="#FEF2F2"
                            BorderBrush="#FECACA"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="10"
                            Visibility="{Binding Error, Converter={StaticResource StringToVis}}">
                        <TextBlock Text="{Binding Error}" Foreground="{StaticResource DangerBrush}" TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="360" MinHeight="300"/>
                <RowDefinition Height="6"/>
                <RowDefinition Height="*" MinHeight="250"/>
            </Grid.RowDefinitions>

            <controls:QuotationControl Grid.Row="0" DataContext="{Binding Quotation}"/>

            <GridSplitter Grid.Row="1"
                  Height="6"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Background="#E5E7EB"
                  ShowsPreview="False"/>

            <controls:QuotedAssetsControl Grid.Row="2" DataContext="{Binding QuotedAssets}"/>
        </Grid>

    </Grid>
</Window>
